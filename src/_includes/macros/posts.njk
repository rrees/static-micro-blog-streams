
{% macro postsList(posts) %}
<ul class="undecorated-list">
    {%- for post in posts | reverse -%}
      <li>
        <article>
          {{post.content | safe}}
          <p><small><a href="{{post.url}}">{{post.data.title}}</a></small></p>
        </article>
      </li>
    {%- endfor -%}
</ul>
{% endmacro %}